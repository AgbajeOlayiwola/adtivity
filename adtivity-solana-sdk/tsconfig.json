{
    "compilerOptions": {
      "target": "ES2018",
      "module": "ESNext",
      "lib": ["ESNext", "DOM"],
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "rootDir": "src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "tests"]
  }